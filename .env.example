# =============================================================================
# Perchance AI Prompt Library - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Pollinations.ai API Token (Required for AI Image Generation)
# Get your token from: https://pollinations.ai/
POLLINATIONS_TOKEN=your_pollinations_ai_token_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Database Configuration (SQLite)
DB_PATH=./data/prompts.db

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=30

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Security Configuration
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
ENABLE_AI_IMAGE_GENERATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_WEB_INTERFACE=true
ENABLE_DISCORD_BOT=false
ENABLE_ANALYTICS=true
ENABLE_EXPORT=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique secrets for production deployments
# 3. Set NODE_ENV=production for production deployments
# 4. Configure appropriate CORS_ORIGIN for web deployments